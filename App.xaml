<Application x:Class="BiochemSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color Scheme -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#2C3E50"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#34495E"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#3498DB"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
            <SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
            <SolidColorBrush x:Key="LightBrush" Color="#ECF0F1"/>
            <SolidColorBrush x:Key="DarkBrush" Color="#1C2833"/>

            <!-- Styles -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
